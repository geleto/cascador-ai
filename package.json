{
	"name": "cascador-ai",
	"version": "0.0.4",
	"description": "Orchestrate AI agent workflows with Nunjucks-style text templates that implicitly run async tasks in parallel",
	"author": "Angel Popov<geleto@gmail.com>",
	"license": "Apache-2.0",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/geleto/cascador-ai.git"
	},
	"homepage": "https://github.com/geleto/cascador-ai#readme",
	"bugs": {
		"url": "https://github.com/geleto/cascador-ai/issues"
	},
	"keywords": [
		"ai",
		"agent",
		"vercel",
		"template",
		"async",
		"parallel",
		"concurrency",
		"llm",
		"orchestration",
		"workflow",
		"nunjucks",
		"templates"
	],
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"type": "module",
	"main": "./dist/cjs/index.js",
	"module": "./dist/esm/index.js",
	"types": "./dist/esm/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/esm/index.d.ts",
			"import": "./dist/esm/index.js",
			"require": "./dist/cjs/index.js"
		}
	},
	"scripts": {
		"build": "webpack && dts-bundle-generator -o dist/index.d.ts src/index.ts",
		"build:webpack": "webpack",
		"build:tsc": "tsc -p tsconfig.build.json",
		"build:dts": "dts-bundle-generator -o dist/index.d.ts src/index.ts",
		"clean": "rimraf dist",
		"lint": "eslint src tests",
		"typecheck": "tsc --noEmit",
		"test": "mocha --require dotenv/config --node-option loader=ts-node/esm \"tests/**/*.test.ts\" --ignore \"tests/type-safety/**/*.ts\"",
		"test:watch": "mocha --require dotenv/config --node-option loader=ts-node/esm \"tests/**/*.test.ts\" --ignore \"tests/type-safety/**/*.ts\" --watch",
		"test-type": "eslint tests/type-safety",
		"start": "tsx examples/story.ts"
	},
	"devDependencies": {
		"@ai-sdk/anthropic": "^1.0.8",
		"@ai-sdk/openai": "^1.3.23",
		"@babel/core": "^7.28.0",
		"@babel/preset-env": "^7.28.0",
		"@eslint/js": "^9.20.1",
		"@types/chai": "^5.0.1",
		"@types/mocha": "^10.0.10",
		"@types/node": "^22.13.4",
		"@typescript-eslint/eslint-plugin": "^8.24.0",
		"@typescript-eslint/parser": "^8.24.0",
		"babel-loader": "^10.0.0",
		"chai": "^5.1.2",
		"dotenv": "^16.4.5",
		"dts-bundle-generator": "^9.5.1",
		"eslint": "^9.20.1",
		"mocha": "^11.0.1",
		"rimraf": "^6.0.1",
		"ts-loader": "^9.5.2",
		"tsx": "^4.19.2",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.24.0",
		"webpack": "^5.100.1",
		"webpack-cli": "^6.0.1"
	},
	"engines": {
		"node": ">=18.0.0",
		"npm": ">=9.0.0"
	},
	"dependencies": {
		"ai": "^4.3.17",
		"cascada-engine": "^0.0.9"
	}
}
